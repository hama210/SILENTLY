  <div class="container">
    <div class="zekr" id="zekrDisplay">بِسْمِ ٱللَّٰهِ</div>
    <button onclick="nextZekr()"> دواتر </button>
  </div>

  <script>
    const azkar = [
      "بِسْمِ ٱللَّٰهِ",
      "ٱلْـحَـمْـدُ للهِ",
      "ٱللَّهُ أَكْبَرُ",
      "سُبْحَانَ ٱللَّهِ",
      "لَا إِلَٰهَ إِلَّا ٱللَّٰهُ",
      "أَسْتَغْفِرُ ٱللَّٰهَ",
      "سُبْحَانَ ٱللَّهِ وَبِحَمْدِهِ",
      "سُبْحَانَ ٱللَّهِ الْعَظِيمِ",
      "اللَّهُمَّ صَلِّ عَلَىٰ مُحَمَّدٍ",
      "لَا حَوْلَ وَلَا قُوَّةَ إِلَّا بِٱللَّهِ",
      "حَسْبُنَا ٱللَّهُ وَنِعْمَ ٱلْوَكِيلُ",
      "اللَّهُمَّ اغْفِرْ لِي",
      "رَبِّ ٱغْفِرْ لِي وَتُبْ عَلَيَّ",
      "اللَّهُمَّ إِنِّي أَسْأَلُكَ ٱلْجَنَّةَ",
      "اللَّهُمَّ أَجِرْنِي مِنَ ٱلنَّارِ"
    ];

    let current = 0;

    function nextZekr() {
      current = (current + 1) % azkar.length;
      document.getElementById("zekrDisplay").textContent = azkar[current];
    }
  </script>

